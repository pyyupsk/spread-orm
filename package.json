{
    "name": "root",
    "version": "2.0.0",
    "private": true,
    "packageManager": "pnpm@9.9.0",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "turbo build",
        "format": "prettier --write . --list-different",
