{
    "name": "spreadorm",
    "private": true,
    "packageManager": "pnpm@8.15.6",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "turbo build",
        "format": "prettier --write . --list-different",
        "lint": "prettier --check . && turbo lint",
