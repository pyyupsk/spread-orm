        "test": "pnpm test --filter=@repo/tests"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.9",
        "knip": "^5.36.2",
        "prettier": "^3.3.3",
        "prettier-plugin-pkg": "^0.18.1",
        "turbo": "^2.2.3",
        "typescript": "^5.6.3"
    }
}
