        "start": "turbo start",
        "test": "pnpm test --filter=tests"
    },
    "devDependencies": {
        "knip": "^5.30.1",
        "prettier": "^3.3.3",
        "prettier-plugin-pkg": "^0.18.1",
        "turbo": "^2.1.1",
        "typescript": "^5.4.5"
    }
}
